<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="202dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/hutao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="410dp"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/b_newgame"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:text="New Game"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/b_continuegame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/b_continuegame"
            android:layout_width="168dp"
            android:layout_height="54dp"
            android:text="Continue Game"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/b_helpgame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/b_helpgame"
            android:layout_width="171dp"
            android:layout_height="52dp"
            android:text="Help Game"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/b_quickgame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/b_quickgame"
            android:layout_width="172dp"
            android:layout_height="56dp"
            android:layout_marginBottom="228dp"
            android:text="Quick Game"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>